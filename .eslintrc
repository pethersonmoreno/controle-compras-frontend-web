{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "amd": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,    
    "sourceType": "module",
    "ecmaFeatures":{
      "modules": true
    }
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn"
  }
}